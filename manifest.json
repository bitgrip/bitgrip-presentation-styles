{
  "manifest_version": 3,
  "name": "Bitgrip Presentation Styles",
  "version": "1.1",
  "description": "Applies Bitgrip corporate identity styles to browser based presentations",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["https://bitgrip.atlassian.net/wiki/*"],
      "css": ["styles.css"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "16": "res/bitgrip_icon.png",
    "32": "res/bitgrip_icon.png",
    "48": "res/bitgrip_icon.png",
    "128": "res/bitgrip_icon.png",
    "256": "res/bitgrip_icon.png"
  }
}